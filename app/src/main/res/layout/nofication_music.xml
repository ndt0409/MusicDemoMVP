<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_100dp"
    android:background="@color/color_orange"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="@dimen/width_80dp"
        android:layout_height="@dimen/height_100dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/image_avatar_play"
            android:layout_width="@dimen/width_60dp"
            android:layout_height="@dimen/height_60dp"
            android:layout_gravity="center"
            android:padding="4dp"
            android:src="@mipmap/ic_launcher_round" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/width_0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center|left"
        android:orientation="vertical"
        tools:ignore="RtlHardcoded">

        <TextView
            android:id="@+id/text_title_play"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="left|center"
            android:maxLines="1"
            android:text="@string/name_music" />

        <TextView
            android:id="@+id/text_artist_play"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/name_sing"
            android:textSize="@dimen/text_size_14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/width_180dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_play_back"
            android:layout_width="@dimen/width_40dp"
            android:layout_height="@dimen/height_40dp"
            android:padding="4dp"
            android:src="@drawable/ic_previous" />

        <ImageView
            android:id="@+id/image_play"
            android:layout_width="@dimen/width_40dp"
            android:layout_height="@dimen/height_40dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_pause" />

        <ImageView
            android:id="@+id/image_play_next"
            android:layout_width="@dimen/width_40dp"
            android:layout_height="@dimen/height_40dp"
            android:padding="4dp"
            android:src="@drawable/ic_next" />

    </LinearLayout>

</LinearLayout>